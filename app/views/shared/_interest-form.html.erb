<div class="interest_form">
  <%= form_with model: @interest, url: process, local: true do |f| %>
    <div class="flex_left">
      <div class='error_messages'>
        <%= render 'layouts/error_messages', model: f.object %>
      </div>
      <div class="short_text_field">
        <%= f.text_area :interests_number, class:"interest-number", id:"interest-number", size:"4x1", maxlength:"10" %>
      </div>
      <div class='short_text_button'>
        <%= f.submit "登録" ,class:"register-btn", data: { confirm: 'この条件で検索していいですか?' } %>
      </div>
    </div>
  <% end %>
</div>