<div class='customer_search_result_main'>
  <div class='data_box'>
    <div class='customer_data_line'>
      <div class='result_category'>
        お客様氏名
      </div>
      <div class='flex_left result_data'>
        <div class='first_name_column'>
          <%= customer_record.last_name %>
        </div>
        <div>
          <%= customer_record.first_name %>
        </div>
      </div>
    </div>
    <div class='customer_data_line'>
      <div class='result_category'>
        (カタカナ)
      </div>
      <div class='flex_left result_data'>
        <div class='first_name_column'>
          <%= customer_record.last_name_kana %>
        </div>
        <div>
          <%= customer_record.first_name_kana %>
        </div>
      </div>
    </div>
    <div class='customer_data_line'>
      <div class='result_category'>
        住所
      </div>
      <div class='result_data'>
        <%= customer_record.address %>
      </div>
    </div>
    <div class='customer_data_line'>
      <div class='result_category'>
        電話番号
      </div>
      <div class='result_data'>
        <%= customer_record.phone_number %>
      </div>
    </div>
    <div class='customer_data_line'>
      <div class='result_category'>
        職業
      </div>
      <div class='result_data'>
        <%= customer_record.job %>
      </div>
    </div>
    <div class='customer_data_line'>
      <div class='result_category'>
        生年月日
      </div>
      <div class='result_data'>
        <%= customer_record.birth_date %>
      </div>
    </div>
    <div class='customer_data_line'>
      <div class='result_category'>
        備考
      </div>
      <div class='result_data'>
        <%= customer_record.remarks %>
      </div>
    </div>
  </div>
  <div class='choise_box white_border'>
    <%= link_to new_pawn_path(customer_record.id), data: { confirm: 'このお客様でよろしいですか?' } do %>
      <div class='choise_btn'>
        選択
      </div>
    <% end %>
  </div>
</div>
