<%= form_with model: @customer, url: customers_path, local: true do |f| %>
  <%= f.text_area :first_name, class:"first-name", id:"first-name", placeholder:"姓" ,rows:"7" ,maxlength:"1000" %>
  <%= f.text_area :last_name, class:"last-name", id:"last-name", placeholder:"名" ,rows:"7" ,maxlength:"1000" %>
  <%= f.text_area :first_name_kana, class:"first-name-kana", id:"first-name-kana", placeholder:"姓(カタカナ)" ,rows:"7" ,maxlength:"1000" %>
  <%= f.text_area :last_name_kana, class:"last-name-kana", id:"last-name-kana", placeholder:"名(カタカナ)" ,rows:"7" ,maxlength:"1000" %>
  <%= f.text_area :address, class:"address", id:"address", placeholder:"住所" ,rows:"7" ,maxlength:"1000" %>
  <%= f.text_area :phone_number, class:"phone-number", id:"phone-number", placeholder:"電話番号" ,rows:"7" ,maxlength:"1000" %>
  <%= raw sprintf(
      f.date_select(
        :birth_date,
        class:'select-birth',
        id:"birth-date",
        use_month_numbers: true,
        prompt:'--',
        start_year: 1930,
        end_year: (Time.now.year - 17),
        date_separator: '%s'),
        "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
  <%= f.text_area :job, class:"job", id:"job", placeholder:"職業" ,rows:"7" ,maxlength:"1000" %>
  <%= f.text_field :remarks, class:"remarks", id:"remarks", placeholder:"備考" ,rows:"7" ,maxlength:"1000" %>
<% end %>